{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["chrome"],
    "paths": {
      "@background/*": ["./src/background/*"],
      "@popup/*": ["./src/popup/*"],
      "@shared/*": ["./src/shared/*"]
    },
    "noEmit": true
  },
  "include": ["src/**/*", "test/**/*"]
}
